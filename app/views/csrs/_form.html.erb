<%= simple_form_for @csr do |f| %>
  <%= f.error_notification %>

    <%= f.input :hostname, class: 'form-control'  %>
    <%= f.input :country, iso_codes: true, selected: [:JP], class: 'form-control'  %>
    <%= f.input :dn_st, class: 'form-control'  %>
    <%= f.input :dn_l, class: 'form-control'  %>
    <%= f.input :dn_o, class: 'form-control'  %>
    <%= f.input :dn_ou, class: 'form-control'  %>

    <%= f.button :submit, class: 'btn-success' %>

<% end %>
